<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="bulma.min.css" />
    <script
      defer
      src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"
    ></script>
  </head>
  <body>
    <section class="section">
      <div class="maincolumns columns is-desktop is-vcentered">
        <div
          class="column is-10 is-offset-1 notification is-info is-light box container"
        >
          <div class="title">Ingredients</div>
          <% if (locals.allIngredients) { %>
          <div class="table-container">
            <table class="table is-bordered is-hoverable is-striped is-narrow">
              <thead>
                <tr>
                  <th>Ingredient Name</th>
                  <th>Description</th>
                  <th>Quantity</th>
                  <th>&nbsp;</th>
                </tr>
              </thead>
              <% let i=0; %> <% for(i=0; i < allIngredients.length; i++) { %>
              <tr>
                <td><%= allIngredients[i].name %></td>
                <td><%= allIngredients[i].description %></td>
                <td><%= allIngredients[i].quantity %></td>
                <td>
                  <a
                    href="/deleteIngredient?id=<%= allIngredients[i].ingredient_id %>"
                  >
                    <span class="icon is-small">
                      <i class="fas fa-trash"></i> </span
                  ></a>
                </td>
              </tr>
              <% } %>
              <tfoot>
                <tr>
                  <td colspan="4">There are <%= i %> ingredients.</td>
                </tr>
              </tfoot>
            </table>
            <form action="addIngredients" method="post">
              <div class="field is-horizontal">
                <div class="field-label is-normal">
                  <label class="label">Add New Ingredient</label>
                </div>
                <div class="field-body">
                  <div class="field">
                    <p class="control is-expanded">
                      <input
                        name="ingredient_name"
                        class="input"
                        type="text"
                        placeholder="Ingredient Name"
                      />
                    </p>
                  </div>
                  <div class="field">
                    <p class="control is-expanded">
                      <input
                        name="description"
                        class="input"
                        type="text"
                        placeholder="Description"
                      />
                    </p>
                  </div>
                  <div class="field">
                    <p class="control is-expanded">
                      <input
                        name="quantity"
                        class="input"
                        type="text"
                        placeholder="quantity"
                      />
                    </p>
                  </div>
                  <div class="field">
                    <button onclick="onClick()" class="button is-link">
                      <script>
                        function onClick() {
                          let rating = document.getElementById("rating");
                          if ((rating > 5) | (rating < 0)) {
                            alert("You need to make an imput of 0 to 5");
                          }
                        }
                      </script>
                      <span>Add</span>
                      <span class="icon is-small">
                        <i class="fas fa-user-plus"></i>
                      </span>
                    </button>
                  </div>
                </div>
              </div>
            </form>
          </div>
          <% } %>
        </div>
      </div>
    </section>
  </body>
</html>
